                <GroupBox x:Name="groupBox_4"  ButtonBase.Click="groupBox_4_Click" BorderThickness="1" Header="{DynamicResource navigation}" Foreground="#93C4C9" Margin="0,0,0,0" Height="246" Width="177" HorizontalAlignment="Left">
                    <StackPanel Orientation="Vertical" Margin="0,0,-6,0">
                        <Button  MouseEnter="settingBtn4_MouseEnter" x:Name="settingBtn4" Click="settingBtn4_Click" Width="20" Height="15"  Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" >
                            <StackPanel>
                                <Popup x:Name="threeDot4"  Width="30" Height="30" AllowsTransparency="True" HorizontalOffset="-6">
                                    <Button x:Name="settingsDot4" Margin="-2,5,0,0" MouseEnter="settingsDot4_MouseEnter" Click="settingsDot4_Click" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" >
                                        <Image Source="/Images/thdots.png" Width="15" Height="15" RenderTransformOrigin="0.5,0.5">
                                            <Image.RenderTransform>
                                                <RotateTransform Angle="90"/>
                                            </Image.RenderTransform>
                                        </Image>
                                    </Button>
                                </Popup>
                                <Popup x:Name="settingsMenu4" MouseLeave="settingsMenu4_MouseLeave"  >
                                    <Menu VerticalAlignment="Bottom">
                                        <Menu.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <VirtualizingStackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </Menu.ItemsPanel>
                                        <MenuItem x:Name="menu_Clear4" Background="#454545" Header="Очистить" Foreground="White"></MenuItem>
                                        <MenuItem x:Name="menu_Settings4" Click="menu_Settings4_Click" Background="#454545" Header="Настройки" Foreground="White"></MenuItem>
                                    </Menu>
                                </Popup>
                                <Button x:Name="polygon_btn4" Click="polygon_btn4_Click"  Background="Transparent" BorderThickness="0" RenderTransformOrigin="0.478,0.485" Width="20" Height="15">
